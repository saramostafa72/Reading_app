<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="208dp"
        android:layout_height="224dp"
        android:src="@drawable/book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/mytitle"
        android:layout_width="150dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="mytitle"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mydesc"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.466" />

    <TextView
        android:id="@+id/mydesc"
        android:layout_width="295dp"
        android:layout_height="72dp"
        android:layout_marginBottom="276dp"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:text="mydesc"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mytitle"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/mytitle" />

    <TextView
        android:id="@+id/myrate"
        android:layout_width="113dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:text="myrate"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ForBook"
        app:layout_constraintEnd_toEndOf="@+id/mydesc"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="@+id/mydesc"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.858" />

    <Button
        android:id="@+id/ForBook"
        android:layout_width="218dp"
        android:layout_height="64dp"
        android:background="@drawable/btnstyle"
        android:text="START READING"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/myrate"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="@+id/myrate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.886" />
</androidx.constraintlayout.widget.ConstraintLayout>